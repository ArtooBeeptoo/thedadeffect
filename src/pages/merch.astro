  }

  .merch-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .section-label {
    text-align: center;
    margin-bottom: 1.5rem;
    color: var(--accent, #f59e0b);
  }

  .merch-card h3 {
    margin-bottom: 0.5rem;
  }

  .merch-card p {
    color: var(--text-muted, #6b7280);
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .price {
    font-weight: 700;
    color: var(--accent, #f59e0b);
    font-size: 1.1rem;
  }

  .store-cta {
    text-align: center;
    padding: 2rem 0;
  }

  .btn-lg {
    font-size: 1.25rem;
    padding: 1rem 2.5rem;
  }

  .store-note {
    margin-top: 1rem;
